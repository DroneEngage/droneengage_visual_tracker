[
    {
        "name": "Camera Settings",
        "template": {
            "Camera": {
                "fieldName": "camera",
                "type": "object",
                "fields": {
                    "source video device": {
                        "fieldName": "source_video_device",
                        "order":1,
                        "type": "text",
                        "defaultvalue": "/dev/video1",
                        "optional": true,
                        "desc": "video input by number."
                    },
                    "source_video_device_name": {
                        "order":2,
                        "type": "text",
                        "defaultvalue": "DE-RPI",
                        "optional": true,
                        "desc": "video input by name."
                    },
                    "output_video_device": {
                        "order":3,
                        "type": "text",
                        "defaultvalue": "/dev/video1",
                        "optional": true,
                        "desc": "virtual video output by number."
                    },
                    "output_video_device_name": {
                        "order":4,
                        "type": "text",
                        "defaultvalue": "DE-TRK",
                        "optional": true,
                        "desc": "virtual video output by name."
                    }
                    
                },
                "optional": false,
                "desc": "serial port settings - ONLY ONE fcb_connection_uri"
            }
        }
    },
    { "name": "Tracking Settings",
        "template": {
            "Tracker Settings": {
                "fieldName": "tracking",
                "type": "object",
                "fields": {
                    "tracker algorithm index": {
                        "fieldName": "tracker_algorithm_index",
                        "order":1,
                        "type": "number",
                        "defaultvalue": 7,
                        "optional": false,
                        "desc": "(0-7)(BOOST,MIL,KCF,TLD,MEDIANFLOW,GOTURN,MOSSE,CSRT)"
                    },
                    "Camera Rotation": {
                        "fieldName": "camera_orientation",
                        "order":2,
                        "type": "number",
                        "defaultvalue": 0,
                        "optional": true,
                        "desc": "Camera Rotation (0:0,1:90,2:180,3:270)"
                    },
                    "Camera Forward": {
                        "fieldName": "camera_forward",
                        "order":3,
                        "type": "checkbox",
                        "defaultvalue": false,
                        "optional": true,
                        "desc": "unchecked-horizontal / checked-vertical"
                    }
                }
            }
        }
    }
]